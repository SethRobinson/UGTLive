<Window x:Class="UGTLive.NoTextInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Page Reading Setup Guide"
        Width="520"
        Height="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <Style x:Key="StepNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="30"/>
        </Style>
        
        <Style x:Key="StepTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>
    
    <Border Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <Border Grid.Row="0" Background="#2196F3" Padding="24,20">
                <StackPanel>
                    <TextBlock Text="ðŸ“–" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="No Text Detected" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Let's get your page reading set up!" 
                               FontSize="13" 
                               Foreground="#E3F2FD" 
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Content Section -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
                <StackPanel>
                    <TextBlock Style="{StaticResource HeaderStyle}" Text="To enable page reading features:"/>
                    
                    <!-- Step 1 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Style="{StaticResource StepNumberStyle}" Text="1."/>
                        <TextBlock Style="{StaticResource StepTextStyle}">
                            <Run Text="Open "/>
                            <Run Text="Settings" FontWeight="SemiBold"/>
                            <Run Text=" and go to the "/>
                            <Run Text="'Page Reading'" FontWeight="SemiBold"/>
                            <Run Text=" tab"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Step 2 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Style="{StaticResource StepNumberStyle}" Text="2."/>
                        <TextBlock Style="{StaticResource StepTextStyle}">
                            <Run Text="Enable "/>
                            <Run Text="'Preload audio'" FontWeight="SemiBold"/>
                            <Run Text=" and configure preload options"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Step 3 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Style="{StaticResource StepNumberStyle}" Text="3."/>
                        <TextBlock Style="{StaticResource StepTextStyle}">
                            <Run Text="Enable "/>
                            <Run Text="'Auto play all after preloading'" FontWeight="SemiBold"/>
                            <Run Text=" if desired"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Step 4 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Style="{StaticResource StepNumberStyle}" Text="4."/>
                        <TextBlock Style="{StaticResource StepTextStyle}">
                            <Run Text="Resize and position the "/>
                            <Run Text="capture area" FontWeight="SemiBold"/>
                            <Run Text=" over text you want to read"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Step 5 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Style="{StaticResource StepNumberStyle}" Text="5."/>
                        <TextBlock Style="{StaticResource StepTextStyle}">
                            <Run Text="Click the "/>
                            <Run Text="'Start'" FontWeight="SemiBold"/>
                            <Run Text=" button to begin OCR capture"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Info Box -->
                    <Border Background="#E3F2FD" 
                            BorderBrush="#2196F3" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="16"
                            Margin="0,8,0,0">
                        <StackPanel>
                            <TextBlock FontSize="13" 
                                       Foreground="#1565C0" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8">
                                <Run Text="âœ¨ Once running"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       FontSize="13" 
                                       Foreground="#1976D2"
                                       LineHeight="20">
                                <Run Text="Audio will automatically preload and play when text is detected."/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="You can also manually click the "/>
                                <Run Text="ðŸ”Š" FontSize="15"/>
                                <Run Text=" speaker icons on each dialog to play individual text blocks."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer Section -->
            <Border Grid.Row="2" 
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,1,0,0"
                    Padding="24,16">
                <Button Content="Got it!"
                        Width="120"
                        Height="36"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Click="OkButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="20,0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1565C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>

