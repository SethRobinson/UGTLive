<Window x:Class="UGTLive.MonitorWindow"         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UGTLive"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Screen Capture Monitor" 
        Height="600" Width="800"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Background="Black"
        Icon="/media/Icon1.ico"
        PreviewMouseWheel="Window_PreviewMouseWheel">
    <!-- Root Grid to contain both main content and overlay -->
    <Grid>
        <!-- Main content grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <WrapPanel Grid.Row="0" Background="#202020" Margin="10,5,10,5">
            <!-- Zoom Controls -->
            <Button x:Name="zoomOutButton" Content="-" Width="30" Margin="2" 
                    Click="ZoomOutButton_Click" Background="#404040" Foreground="White"/>
            <Button x:Name="zoomInButton" Content="+" Width="30" Margin="2" 
                    Click="ZoomInButton_Click" Background="#404040" Foreground="White"/>
            <TextBox x:Name="zoomTextBox" Width="60" Margin="2" Text="100" TextAlignment="Center"
                     VerticalContentAlignment="Center" Background="#404040" Foreground="White" BorderBrush="#606060"/>
            
            <!-- View in Browser Button -->
            <Button x:Name="viewInBrowserButton" Content="View in browser" Margin="10,2,2,2" 
                    Click="ViewInBrowserButton_Click" Background="#404040" Foreground="White"
                    Padding="8,2"/>
            
            <!-- Play All Audio Button -->
            <Button x:Name="playAllAudioButton" Content="ðŸ”Š All" Margin="10,2,2,2" 
                    Click="PlayAllAudioButton_Click" Background="#404040" Foreground="White"
                    Padding="8,2" ToolTip="Play all audio files in order"/>
                    
            <!-- Separator -->
            <Rectangle Width="1" Fill="#606060" Margin="10,2" VerticalAlignment="Stretch"/>
            
            <!-- Overlay Controls -->
            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Overlay:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <RadioButton x:Name="overlayHideRadio" Content="Hide" Foreground="White" VerticalAlignment="Center" 
                             Margin="0,0,10,0" GroupName="OverlayMode" 
                             Checked="OverlayRadioButton_Checked" Tag="Hide"/>
                <RadioButton x:Name="overlaySourceRadio" Content="Source" Foreground="White" VerticalAlignment="Center" 
                             Margin="0,0,10,0" GroupName="OverlayMode"
                             Checked="OverlayRadioButton_Checked" Tag="Source"/>
                <RadioButton x:Name="overlayTranslatedRadio" Content="Translated" Foreground="White" VerticalAlignment="Center" 
                             GroupName="OverlayMode" 
                             Checked="OverlayRadioButton_Checked" Tag="Translated"/>
            </StackPanel>
            
            <!-- Separator -->
            <Rectangle Width="1" Fill="#606060" Margin="10,2" VerticalAlignment="Stretch"/>
            
            <!-- Status Display -->
            <Border x:Name="statusBorder" 
                    Background="#DD404040" 
                    Padding="8,3" 
                    CornerRadius="3"
                    BorderThickness="1" 
                    BorderBrush="#666666" 
                    VerticalAlignment="Center" 
                    Margin="5,0">
                <TextBlock x:Name="statusLabel" 
                           Foreground="#FFDDDDDD" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           Text="Stopped" 
                           Width="280" 
                           TextAlignment="Center" 
                           TextTrimming="CharacterEllipsis"/>
            </Border>
            
            <!-- Hidden controls for settings synchronization -->
            <ComboBox x:Name="ocrMethodComboBox" Width="0" Height="0" Margin="0" Visibility="Collapsed" />
            
            <CheckBox x:Name="autoTranslateCheckBox" IsChecked="False" Visibility="Collapsed"/>
            
            <TextBox x:Name="blockDetectionPowerTextBox" Width="0" Height="0" Margin="0" Visibility="Collapsed" 
                     Text="5" VerticalContentAlignment="Center"/>
        </WrapPanel>
        
        <!-- ScrollViewer for zooming and scrolling -->
        <ScrollViewer Grid.Row="1" x:Name="imageScrollViewer" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      Background="Black"
                      Panel.ZIndex="0">
            <Grid x:Name="imageContainer" Background="Black">
                <Image x:Name="captureImage" Stretch="None" 
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <wv2:WebView2 x:Name="textOverlayWebView" 
                              Panel.ZIndex="1"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              DefaultBackgroundColor="Transparent"/>
            </Grid>
        </ScrollViewer>
        </Grid>
    </Grid>
</Window>