<Window x:Class="UGTLive.ServiceInstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Installation" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="titleText"
                   Text="Installing Service"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,10"/>
        
        <!-- Warning Message -->
        <Border Grid.Row="1"
                Background="#3E3E00"
                BorderBrush="#FFFF00"
                BorderThickness="2"
                Padding="10"
                Margin="0,0,0,10"
                x:Name="warningBorder">
            <StackPanel>
                <TextBlock Text="⚠️ Please be patient"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#FFFF00"
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="warningText"
                           Text="Installation may take up to 10 minutes. Do not close this window."
                           FontSize="12"
                           Foreground="#FFFF00"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Output TextBox -->
        <Border Grid.Row="2"
                Background="#252526"
                BorderBrush="#3E3E42"
                BorderThickness="1"
                Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          x:Name="outputScrollViewer">
                <TextBox x:Name="outputTextBox"
                         Background="Transparent"
                         Foreground="#D4D4D4"
                         FontFamily="Consolas"
                         FontSize="11"
                         BorderThickness="0"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="5"/>
            </ScrollViewer>
        </Border>
        
        <!-- Progress Bar -->
        <ProgressBar Grid.Row="3"
                     x:Name="progressBar"
                     Height="20"
                     IsIndeterminate="True"
                     Margin="0,0,0,10"
                     Visibility="Visible"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="cancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="30"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"
                    Background="#C42B1C"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="closeButton"
                    Content="Close"
                    Width="100"
                    Height="30"
                    Click="CloseButton_Click"
                    Visibility="Collapsed"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

