<Window x:Class="UGTLive.ServerSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UGTLive"
        mc:Ignorable="d"
        Title="GPU Service Console"
        Height="850"
        Width="900"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Icon="/media/Icon1.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Splash Header with Icon and Branding -->
        <Border Grid.Row="0" Background="White" Padding="20,20,20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Icon -->
                <Image x:Name="appIconImage" Grid.Column="0" Width="80" Height="80" 
                       Margin="0,0,20,0" VerticalAlignment="Center"/>
                
                <!-- Title and Version -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Universal Game Translator Live" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="#1E1E6E" Margin="0,0,0,5"/>
                    <TextBlock x:Name="versionTextBlock" 
                               Text="" 
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#5A5A5A"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock FontSize="12" Margin="0,0,15,0">
                            <Hyperlink NavigateUri="https://github.com/SethRobinson/UGTLive" 
                                       RequestNavigate="Hyperlink_RequestNavigate"
                                       Foreground="#0066CC">
                                github
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="12">
                            <Hyperlink NavigateUri="https://www.rtsoft.com" 
                                       RequestNavigate="Hyperlink_RequestNavigate"
                                       Foreground="#0066CC">
                                rtsoft.com
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Diagnostic Items -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,15">
            <StackPanel>
                <!-- Update Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="updateStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Version Check" FontWeight="Bold"/>
                            <TextBlock x:Name="updateStatusText" Text="Checking for updates..." Foreground="Gray"/>
                        </StackPanel>
                        <Button x:Name="downloadUpdateButton" Content="Download Update" 
                                Grid.Column="2" Padding="10,5" Margin="5,0,0,0"
                                Click="DownloadUpdateButton_Click" IsEnabled="False" Visibility="Collapsed"/>
                    </Grid>
                </Border>
                
                <!-- GPU Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="gpuStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="NVIDIA GPU" FontWeight="Bold"/>
                            <TextBlock x:Name="gpuStatusText" Text="Checking..." Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Python Services Section -->
                <Border BorderBrush="#3366AA" BorderThickness="2" Padding="10" Margin="0,0,0,10" Background="#F0F8FF">
                    <StackPanel>
                        <TextBlock Text="GPU Service Console" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBlock Text="You'll need at least one of these installed and active to use OCR features." 
                                   Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,10"/>
                        
                        <!-- Show Server Windows Checkbox -->
                        <CheckBox x:Name="showServerWindowCheckBox" 
                                  Content="Show service windows - good to do if something isn't working"
                                  Margin="0,0,0,10" VerticalAlignment="Center"
                                  Checked="ShowServerWindowCheckBox_Changed" 
                                  Unchecked="ShowServerWindowCheckBox_Changed"/>
                        
                        <!-- Services List -->
                        <ItemsControl x:Name="servicesItemsControl" Margin="0,5,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,8" Background="White">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Service Info Row -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Status Icon -->
                                                <TextBlock Grid.Column="0" Text="{Binding StatusIcon}" FontSize="18" 
                                                           Foreground="{Binding StatusColor}"
                                                           Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                
                                                <!-- Service Name & Description -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" FontSize="13">
                                                        <Run Text="{Binding ServiceName}"/>
                                                        <Run Text=" (Port " Foreground="Gray" FontSize="11"/>
                                                        <Run Text="{Binding Port}" Foreground="Gray" FontSize="11"/>
                                                        <Run Text=")" Foreground="Gray" FontSize="11"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="11" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}" 
                                                               FontSize="11" Margin="0,2,0,0"/>
                                                </StackPanel>
                                                
                                                <!-- AutoStart Checkbox -->
                                                <CheckBox Grid.Column="2" Content="AutoStart" 
                                                          IsChecked="{Binding AutoStart, Mode=TwoWay}"
                                                          VerticalAlignment="Center" Margin="10,0,0,0"
                                                          Checked="ServiceAutoStart_Changed"
                                                          Unchecked="ServiceAutoStart_Changed"/>
                                            </Grid>
                                            
                                            <!-- Buttons Row -->
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="28,8,0,0" HorizontalAlignment="Left">
                                                <Button Content="{Binding StartStopButtonText}" 
                                                        Padding="10,4" Margin="0,0,5,0"
                                                        IsEnabled="{Binding StartStopEnabled}"
                                                        Click="ServiceStartStop_Click"
                                                        Tag="{Binding ServiceName}"/>
                                                <Button Content="{Binding InstallButtonText}" 
                                                        Padding="10,4" Margin="0,0,5,0"
                                                        IsEnabled="{Binding InstallEnabled}"
                                                        Click="ServiceInstall_Click"
                                                        Tag="{Binding ServiceName}"/>
                                                <Button Content="Uninstall" 
                                                        Padding="10,4" Margin="0,0,5,0"
                                                        IsEnabled="{Binding UninstallEnabled}"
                                                        Click="ServiceUninstall_Click"
                                                        Tag="{Binding ServiceName}"/>
                                                <Button Content="Test the install" 
                                                        Padding="10,4" Margin="0,0,0,0"
                                                        Click="ServiceTest_Click"
                                                        Tag="{Binding ServiceName}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar" Grid.Row="2" Height="20" Margin="20,0,20,10" 
                     Visibility="Collapsed" IsIndeterminate="True"/>
        
        <!-- Status Message -->
        <TextBlock x:Name="statusMessage" Grid.Row="2" Text="" Foreground="Gray" 
                   Margin="20,0,20,10" TextWrapping="Wrap" Visibility="Collapsed"
                   HorizontalAlignment="Center" TextAlignment="Center"/>
        
        
        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="statusLabel" 
                       Grid.Column="0"
                       Text="Making sure everything is ready..." 
                       Foreground="Black"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="14"/>
            <Button x:Name="continueButton" 
                    Grid.Column="1"
                    Content="Continue" 
                    Padding="10,5" IsEnabled="True" Click="ContinueButton_Click"/>
        </Grid>
    </Grid>
</Window>
