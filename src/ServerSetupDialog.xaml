<Window x:Class="UGTLive.ServerSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UGTLive"
        mc:Ignorable="d"
        Title="UGTLive Server Setup"
        Height="810"
        Width="700"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Icon="/media/Icon1.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Splash Header with Icon and Branding -->
        <Border Grid.Row="0" Background="White" Padding="20,20,20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Icon -->
                <Image x:Name="appIconImage" Grid.Column="0" Width="80" Height="80" 
                       Margin="0,0,20,0" VerticalAlignment="Center"/>
                
                <!-- Title and Version -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Universal Game Translator Live" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="#1E1E6E" Margin="0,0,0,5"/>
                    <TextBlock x:Name="versionTextBlock" 
                               Text="V0.28 by Seth A. Robinson" 
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="#5A5A5A"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Diagnostic Items -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,15">
            <StackPanel>
                <!-- Update Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="updateStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Version Check" FontWeight="Bold"/>
                            <TextBlock x:Name="updateStatusText" Text="Checking for updates..." Foreground="Gray"/>
                        </StackPanel>
                        <Button x:Name="downloadUpdateButton" Content="Download Update" 
                                Grid.Column="2" Padding="10,5" Margin="5,0,0,0"
                                Click="DownloadUpdateButton_Click" IsEnabled="False" Visibility="Collapsed"/>
                    </Grid>
                </Border>
                
                <!-- GPU Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="gpuStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="NVIDIA GPU" FontWeight="Bold"/>
                            <TextBlock x:Name="gpuStatusText" Text="Checking..." Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Conda Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="condaStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Miniconda Installation" FontWeight="Bold"/>
                            <TextBlock x:Name="condaStatusText" Text="Checking..." Foreground="Gray"/>
                        </StackPanel>
                        <Button x:Name="installCondaButton" Content="Install Miniconda" 
                                Grid.Column="2" Padding="10,5" Margin="5,0,0,0"
                                Click="InstallCondaButton_Click" IsEnabled="False"/>
                    </Grid>
                </Border>
                
                <!-- Conda Environment Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="envStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Conda Environment (ocrstuff)" FontWeight="Bold"/>
                            <TextBlock x:Name="envStatusText" Text="Checking..." Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Python Packages Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="packagesStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Python Packages" FontWeight="Bold"/>
                                <TextBlock x:Name="packagesStatusText" Text="Checking..." Foreground="Gray"/>
                            </StackPanel>
                            <Button x:Name="installBackendButton" Content="Install/Reinstall Backend" 
                                    Grid.Column="2" Padding="10,5" Margin="5,0,0,0"
                                    Click="InstallBackendButton_Click" IsEnabled="False"/>
                        </Grid>
                        <ItemsControl x:Name="packagesList" Grid.Row="1" Margin="30,10,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="11" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                
                <!-- Server Status Check -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="serverStatusIcon" Text="⏳" FontSize="20" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Server Status" FontWeight="Bold"/>
                            <TextBlock x:Name="serverStatusText" Text="Checking..." Foreground="Gray"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5,0,0,0" VerticalAlignment="Center">
                            <CheckBox x:Name="showServerWindowCheckBox" 
                                      Content="Show Server window"
                                      Margin="0,0,10,0" VerticalAlignment="Center"
                                      Checked="ShowServerWindowCheckBox_Changed" Unchecked="ShowServerWindowCheckBox_Changed"/>
                            <Button x:Name="startServerButton" Content="Start Server" 
                                    Padding="10,5" Margin="0,0,5,0"
                                    Click="StartServerButton_Click" IsEnabled="False"/>
                            <Button x:Name="stopServerButton" Content="Stop Server" 
                                    Padding="10,5"
                                    Click="StopServerButton_Click" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar" Grid.Row="2" Height="20" Margin="20,0,20,10" 
                     Visibility="Collapsed" IsIndeterminate="True"/>
        
        <!-- Status Message -->
        <TextBlock x:Name="statusMessage" Grid.Row="2" Text="" Foreground="Gray" 
                   Margin="20,0,20,10" TextWrapping="Wrap" Visibility="Collapsed"
                   HorizontalAlignment="Center" TextAlignment="Center"/>
        
        
        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="statusLabel" 
                       Grid.Column="0"
                       Text="Making sure everything is ready..." 
                       Foreground="Black"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="14"/>
            <Button x:Name="continueButton" 
                    Grid.Column="1"
                    Content="Continue" 
                    Padding="10,5" IsEnabled="True" Click="ContinueButton_Click"/>
        </Grid>
    </Grid>
</Window>

