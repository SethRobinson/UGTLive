<Window x:Class="UGTLive.ServiceDiagnosticDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Diagnostics" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   x:Name="titleText"
                   Text="Running diagnostics..."
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,10"/>
        
        <!-- Output TextBox -->
        <Border Grid.Row="1"
                Background="#252526"
                BorderBrush="#3E3E42"
                BorderThickness="1"
                Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          x:Name="outputScrollViewer">
                <TextBox x:Name="outputTextBox"
                         Background="Transparent"
                         Foreground="#D4D4D4"
                         FontFamily="Consolas"
                         FontSize="11"
                         BorderThickness="0"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Disabled"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="5"/>
            </ScrollViewer>
        </Border>
        
        <!-- Progress Bar -->
        <ProgressBar Grid.Row="2"
                     x:Name="progressBar"
                     Height="20"
                     IsIndeterminate="True"
                     Margin="0,0,0,10"
                     Visibility="Visible"/>
        
        <!-- Continue Button -->
        <Button Grid.Row="3"
                x:Name="continueButton"
                Content="Continue"
                Width="100"
                Height="30"
                HorizontalAlignment="Right"
                Click="ContinueButton_Click"
                Background="#0078D4"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"/>
    </Grid>
</Window>

