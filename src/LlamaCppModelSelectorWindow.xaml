<Window x:Class="UGTLive.LlamaCppModelSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select llama.cpp Model"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Icon="/media/Icon1.ico">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select a model from the llama.cpp server:" 
                   Margin="0,0,0,10" FontWeight="SemiBold"/>
        
        <ListBox x:Name="modelsListBox" Grid.Row="1" 
                 SelectionMode="Single"
                 SelectionChanged="ModelsListBox_SelectionChanged"
                 MouseDoubleClick="ModelsListBox_MouseDoubleClick"/>
        
        <TextBlock x:Name="statusTextBlock" Grid.Row="2" 
                   Margin="0,10,0,10" 
                   Foreground="Gray"
                   TextWrapping="Wrap"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Height="25" Margin="0,0,10,0"
                   Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="75" Height="25"
                   Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

