<Window x:Class="UGTLive.CondaTosDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Conda Terms of Service"
        Height="400"
        Width="600"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Icon="/media/Icon1.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" FontSize="16" FontWeight="Bold" Margin="0,0,0,15">
            Conda Terms of Service Acceptance Required
        </TextBlock>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <TextBlock TextWrapping="Wrap" LineHeight="22">
                The backend installation requires accepting the Terms of Service for the following Conda channels:
                <LineBreak/><LineBreak/>
                • Anaconda Main Channel (https://repo.anaconda.com/pkgs/main)
                <LineBreak/>
                • Anaconda R Channel (https://repo.anaconda.com/pkgs/r)
                <LineBreak/>
                • Anaconda MSYS2 Channel (https://repo.anaconda.com/pkgs/msys2)
                <LineBreak/><LineBreak/>
                These channels are required for installing Python packages and dependencies. By proceeding, you agree to accept these Terms of Service on your behalf.
                <LineBreak/><LineBreak/>
                You can review the Anaconda Terms of Service at:
                <LineBreak/>
                <Hyperlink x:Name="tosLink" NavigateUri="https://www.anaconda.com/terms-of-service" 
                           RequestNavigate="TosLink_RequestNavigate">
                    https://www.anaconda.com/terms-of-service
                </Hyperlink>
            </TextBlock>
        </ScrollViewer>
        
        <CheckBox x:Name="acceptTosCheckBox" Grid.Row="2" 
                  Content="I accept the Conda Terms of Service for the required channels"
                  IsChecked="True"
                  Margin="0,0,0,20"
                  FontWeight="SemiBold"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>
            <Button x:Name="okButton" Content="OK" Width="80" Height="30" 
                    IsDefault="True" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

